for i in range(5):
    for j in range(1, 5 - i):
        print(" ", end="")
    for k in range(i + 1):
        print(k + 1, end="")
    print("\r")

for i in range(5):
    for k in range(i):
        print(" ", end="")
    for j in range(5, i, -1):
        print("* ", end="")
    print("\r")

for i in range(5):
    for j in range(4,i,-1):
        print("*", end="")
    for k in range(0, i + 1):
        print("*", end="")    
    

    print("\r")    


for i in range(5):
